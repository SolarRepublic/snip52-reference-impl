{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "ExecuteMsg",
  "oneOf": [
    {
      "description": "transaction that emits event on the chain",
      "type": "object",
      "required": [
        "tx"
      ],
      "properties": {
        "tx": {
          "type": "object",
          "required": [
            "channel"
          ],
          "properties": {
            "channel": {
              "description": "channel to increment the counter on",
              "type": "string"
            },
            "padding": {
              "description": "optional message length padding",
              "type": [
                "string",
                "null"
              ]
            }
          }
        }
      },
      "additionalProperties": false
    },
    {
      "description": "updates the seed with a new document signature",
      "type": "object",
      "required": [
        "update_seed"
      ],
      "properties": {
        "update_seed": {
          "type": "object",
          "required": [
            "signed_doc"
          ],
          "properties": {
            "padding": {
              "description": "optional message length padding",
              "type": [
                "string",
                "null"
              ]
            },
            "signed_doc": {
              "description": "signed doc",
              "allOf": [
                {
                  "$ref": "#/definitions/SignedDocument"
                }
              ]
            }
          }
        }
      },
      "additionalProperties": false
    },
    {
      "description": "set viewing key",
      "type": "object",
      "required": [
        "set_viewing_key"
      ],
      "properties": {
        "set_viewing_key": {
          "type": "object",
          "required": [
            "viewing_key"
          ],
          "properties": {
            "padding": {
              "description": "optional message length padding",
              "type": [
                "string",
                "null"
              ]
            },
            "viewing_key": {
              "description": "viewing key",
              "type": "string"
            }
          }
        }
      },
      "additionalProperties": false
    }
  ],
  "definitions": {
    "Binary": {
      "description": "Binary is a wrapper around Vec<u8> to add base64 de/serialization with serde. It also adds some helper methods to help encode inline.\n\nThis is only needed as serde-json-{core,wasm} has a horrible encoding for Vec<u8>. See also <https://github.com/CosmWasm/cosmwasm/blob/main/docs/MESSAGE_TYPES.md>.",
      "type": "string"
    },
    "DocParams": {
      "type": "object",
      "required": [
        "chain_id",
        "contract",
        "previous_seed"
      ],
      "properties": {
        "chain_id": {
          "type": "string"
        },
        "contract": {
          "type": "string"
        },
        "previous_seed": {
          "$ref": "#/definitions/Binary"
        }
      }
    },
    "PubKey": {
      "type": "object",
      "required": [
        "type",
        "value"
      ],
      "properties": {
        "type": {
          "description": "ignored, but must be \"tendermint/PubKeySecp256k1\" otherwise the verification will fail",
          "type": "string"
        },
        "value": {
          "description": "Secp256k1 PubKey",
          "allOf": [
            {
              "$ref": "#/definitions/Binary"
            }
          ]
        }
      }
    },
    "Signature": {
      "description": "Signature",
      "type": "object",
      "required": [
        "pub_key",
        "signature"
      ],
      "properties": {
        "pub_key": {
          "$ref": "#/definitions/PubKey"
        },
        "signature": {
          "$ref": "#/definitions/Binary"
        }
      }
    },
    "SignedDocument": {
      "description": "Seed",
      "type": "object",
      "required": [
        "params",
        "signature"
      ],
      "properties": {
        "params": {
          "$ref": "#/definitions/DocParams"
        },
        "signature": {
          "$ref": "#/definitions/Signature"
        }
      }
    }
  }
}
